/* pages/ActionDetail/ActionDetail.wxss */
.container {
  padding: 10rpx;
}

.header {
  width: 97%;
}

.header .userBar {
  white-space: nowrap;
  padding-left: 5rpx;
  margin-left: 10rpx;
}

.header .userBar .userHead {
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}

.header .userInfo {
  position: relative;
  display: inline-block;
  vertical-align: 23rpx;
}

.header .userBar .userInfo .userName {
  display: inline-block;
  width: 200rpx;
  vertical-align: top;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 15rpx;
  font-size: 34rpx;
}

.header .userBar .userInfo .ac-time {
  display: inline-block;
  font-size: 32rpx;
  position: absolute;
  top: 5rpx;
  left: 400rpx;
}
.detailTitle{
  width: 97%;
  padding: 10rpx;
}
.detailTitle .detail-sort{
  padding: 5rpx 10rpx;
  background-color: #55a3a3;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
}
.detailTitle .detail-title{
  margin-left: 10rpx;
}
.detailInfo {
  /* display: inline-block; */
  width: 97%;
  padding: 10rpx;
  margin-left: 5rpx;
}

.detailImg {
  margin: 5rpx 15rpx;
}

.localAndTime{
  width: 97%;
  padding: 10rpx;
  font-size: 28rpx;
  color: #6b6464;
  margin-left: 5rpx;
}

/* 转发跟参加按钮 */
.btnBar {
  width: 80%;
  margin: 10rpx auto;
}

.btnBar .comment,
.btnBar .join ,
.btnBar .quit{
  display: inline-block;
  width: 120rpx;
  padding: 10rpx;
  /* border: 1px solid #87c5bb; */
  border-radius: 10rpx;
  text-align: center;
  margin-left: 80rpx;
  background-color: #55a1a1;
  color: #eee;
}

.joinUser {
  width: 97%;
  margin: 20rpx auto;
  border-top: 1px solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.joinUser .joinTitle {
  font-size: 20rpx;
  vertical-align: 20rpx;
  color: #8a8282;
}

.joinUser .joinUserBar {
  width: 500rpx;
  display: inline-block;
  overflow: hidden;
}

.joinUser .joinUserBar .userBar {
  display: inline-block;
  width: 150rpx;
  white-space: nowrap;
  margin-left: 5rpx;
}

.joinUser .joinUserBar .userBar .userName {
  display: inline-block;
  width: 80rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 5rpx;
  vertical-align: 3rpx;
}

.joinUser .joinUserBar .headPic {
  width: 40rpx;
  height: 40rpx;
  margin-left: 5rpx;
  margin-top: 10rpx;
}

.joinUser .more {
  display: inline-block;
  font-size: 28rpx;
  vertical-align: 15rpx;
  color: #55a3a3;
}

.commentBar {
  width: 97%;
  padding-top: 15rpx;
  border-top: 1px solid #888;
  margin: 0 auto;
}

.commentBar .commentState .comUser{
  display: inline-block;
  width: 80%;
}

.commentBar .commentState .comUser .userCon {
  display: inline-flex;
  flex-direction: column;
  vertical-align: 35rpx;
}

.commentBar .commentState .comUser .userHead {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
}

.commentBar .commentState .comUser .userName {
  display: inline-block;
  font-size: 28rpx;
  vertical-align: 35rpx;
  padding-left: 10rpx;
}

.commentBar .commentState .comUser .commentTime {
  display: inline-block;
  font-size: 26rpx;
  margin-left: 10rpx;
  color: #706b6b;
}

.commentBar .commentState .commentText {
  /* margin-left: 65rpx; */
  vertical-align: -20rpx;
}

.commentBar .answer{
  display: inline-block;
  font-size: 30rpx;
  color: #55a3a3;
  vertical-align: top;
}
.commentBar .deleteCom{
  display: inline-block;
  font-size: 30rpx;
  color: #55a3a3;
  vertical-align: top;
  margin-left: 10rpx
}

.commentBar .answerState{
  margin-top: 10rpx;
  border-top: 1rpx solid #8e8e8e;
}

.commentBar .answerUser{
  display: inline-block;
  width: 82%;
  margin-left: 30rpx;
}

.commentBar .answerUser .userCon {
  display: flex;
  flex-direction: row;
  vertical-align: 35rpx;
}

.commentBar .answerUser .userName {
  display: inline-block;
  font-size: 26rpx;
  vertical-align: 35rpx;
  padding-left: 10rpx;
}

.commentBar .answerUser .answerTime {
  display: inline-block;
  font-size: 26rpx;
  margin-left: 10rpx;
  color: #706b6b;
}

.commentBar .answerText {
  margin-left: 10rpx;
  vertical-align: -20rpx;
  font-size: 26rpx;
}


.commentInputView {
  width: 100%;
  height: 100rpx;
  background-color: rgba(204, 204, 204, 0.61);
  padding: 4%;
  position: fixed;
  display: flex;
  justify-content: space-between;
}

.commentInput {
  width: 70%;
  background-color: #fff;
  font-size: 28rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}

.input {
  width: 100%;
  padding: 15rpx;
  font-size: 30rpx;
  margin: 0 auto;
  overflow: hidden;
  line-height-step: 20rpx;
  border: 0;
}

.send {
  width: 20%;
  height: 80rpx;
  color: #fff;
  font-size: 34rpx;
  background-color: green;
  border: 0;
}

/**弹窗**/
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
.answerBar .deleteAnswer{
  display: inline-block;
  color: #1296db;
}