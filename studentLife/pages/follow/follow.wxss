 .follow .fBtn{
  width: 35%;
  height: 60rpx;
  margin-top: 10rpx;
  border: 1px solid #ddd;
  border-radius: 20px;
  text-align: center;
  margin-right: 20rpx;
}

 .follow .fBtn .plus,
 .follow .fBtn .yes {
  width: 35rpx;
  height: 35rpx;
  vertical-align: -6rpx;
}
 .follow .fBtn .fBtnText{
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}