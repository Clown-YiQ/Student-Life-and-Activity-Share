.container{
  width: 700rpx;
  margin-top: 20rpx;
}

.text-container{
  padding: 0 30rpx;
  font-size: 40rpx;
  font-weight: 400;
}

.img-container{
  position: relative;
  display: flex;
  float: warp;
  /* justify-content: space-between; */
  width: 700rpx;
  height: 200rpx;
  overflow: hidden;
}

.img-container .image{
  width: 31%;
  height: 90%;
  margin-left: 20rpx;
}

.img-num{
  position: absolute;
  right: 80rpx;
  bottom: 80rpx;
  padding: 5rpx 10rpx;
  background-color: rgba(0,0,0,.7);
  color: #fff;
  font-size: 24rpx;
}