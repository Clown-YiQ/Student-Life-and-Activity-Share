/* components/secondDetail/cmp.wxss */
.scGoods{
  width: 97%;
  padding: 5rpx;
  border: 1rpx solid #ccc;
  margin: 15rpx auto 0;
}
.scGoods .gTitle{
  width: 90%;
}
.scGoods .gTitle text{
  display: block;
  font-size: 32rpx;
  margin-left: 30rpx;
}
.scGoods .gGood{
  width: 90%;
  margin-left: 15rpx;
}
.scGoods .gGood .g-detail{
  font-size: 30rpx;
  margin-left: 15rpx;
  padding: 5rpx 0 5rpx;
}
.userCon{
  width: 90%;
  margin: 10rpx auto 0;
  padding: 5rpx;
  display: flex;
  border-bottom: 1px solid #ddd;
}
.userCon .uBar .uHead{
  width: 45rpx;
  height: 45rpx;
  vertical-align: center;
}

.userCon .uBar{
  white-space: nowrap;
}
.uBar .uName{
  display: inline-block;
  width: 200rpx;
  vertical-align: top;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 5rpx;
  font-size: 28rpx;
}

/* 图片样式 */
.text-container{
  padding: 0 30rpx;
  font-size: 40rpx;
  font-weight: 400;
}

.img-container{
  position: relative;
  display: flex;
  float: warp;
  width: 700rpx;
  height: 200rpx;
  overflow: hidden;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.img-container .image{
  width: 31%;
  height: 90%;
  margin-left: 20rpx;
}

.img-num{
  position: absolute;
  right: 80rpx;
  bottom: 80rpx;
  padding: 5rpx 10rpx;
  background-color: rgba(0,0,0,.7);
  color: #fff;
  font-size: 24rpx;
}