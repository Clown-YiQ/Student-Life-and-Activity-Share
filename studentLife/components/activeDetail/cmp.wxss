/* components/activeDetail/cmp.wxss */
.ac-detail{
  width: 97%;
  padding: 5rpx;
  border: 1rpx solid #ccc;
  margin: 15rpx auto 0;
}
.ac-header{
  width: 90%;
  margin: 10rpx auto 0;
  padding: 5rpx;
  display: flex;
  border-bottom: 1px solid #ddd;
}
.userBar{
  white-space: nowrap;
}
.userBar .userHead{
  width: 45rpx;
  height: 45rpx;
  vertical-align: center;
}
.userBar .userName{
  display: inline-block;
  width: 200rpx;
  vertical-align: top;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 5rpx;
  font-size: 28rpx;
}
.timeBar .ac-time,.numBar .ac-num{
  display: inline-block;
  font-size: 24rpx;
  margin-left: 50rpx;
}
.timeBar .ac-time .clock{
  width: 25rpx;
  height: 25rpx;
}
.timeBar .ac-time .time{
  vertical-align: 5rpx;
  margin-left: 2rpx;
}
.numBar .ac-num .numPng{
  width: 30rpx;
  height: 30rpx;
}
.numBar .ac-num .num{
  vertical-align: 5rpx;
}
.ac-con-head{
  width: 90%;
}
.ac-con{
  margin-top: 10rpx;
  /* margin-left: 10rpx; */
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}
.ac-con .ac-sort{
  padding: 5rpx 8rpx 5rpx;
  border-radius: 10rpx;
  background-color: #55a3a3;
  margin-left: 15rpx;
  font-size: 24rpx;
  color:#fff;
}
.ac-con .ac-title{
  margin-left: 10rpx;
  font-weight: 500;
}
.ac-container{
  width: 90%;
  padding: 15rpx 0 0 15rpx;
}
.timeLocal{
  width: 90%;
}
.timeLocal .local{
  padding-bottom: 15rpx;
}
.timeLocal .local text{
  display: block;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #888282;
}

.text-container{
  padding: 0 30rpx;
  font-size: 40rpx;
  font-weight: 400;
}

.img-container{
  position: relative;
  display: flex;
  float: warp;
  /* justify-content: space-between; */
  width: 700rpx;
  height: 200rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.img-container .image{
  width: 31%;
  height: 90%;
  margin-left: 20rpx;
}

.img-num{
  position: absolute;
  height: 30rpx;
  right: 80rpx;
  bottom: 80rpx;
  padding: 5rpx 10rpx;
  background-color: rgba(0,0,0,.7);
  color: #fff;
  font-size: 24rpx;
  line-height: 30rpx;
}