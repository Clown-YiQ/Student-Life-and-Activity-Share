/* components/share/cmp.wxss */
.userCon{
  width: 90%;
  margin: 10rpx auto 0;
  padding: 5rpx;
  display: flex;
  border-bottom: 1px solid #ddd;
}
.userCon .uBar .uHead{
  width: 45rpx;
  height: 45rpx;
  vertical-align: center;
}

.userCon .uBar{
  white-space: nowrap;
}
.uBar .uName{
  display: inline-block;
  width: 200rpx;
  vertical-align: top;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 5rpx;
  font-size: 28rpx;
}
.tBar{
  position: relative;
  margin-top: 20rpx;
  margin-left: 20rpx;
}


.tBar .i-time,.nBar .i-num{
  display: inline-block;
  font-size: 24rpx;
  margin-left: 5rpx;
}
.tBar .i-time .clock{
  width: 25rpx;
  height: 25rpx;
}
.tBar .i-time .time{
  vertical-align: 5rpx;
  margin-left: 2rpx;
}
/* 生活圈 */
.lShare{
  width: 97%;
  border: 1rpx solid #ccc;
  padding: 5rpx;
  border: 1rpx solid #ccc;
  margin: 15rpx auto 0;
}

.uShare{
  width: 90%;
  padding: 15rpx 0 0 15rpx;
  margin-top: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}

.uShare .s-detail{
  margin-left: 20rpx;
}
.uShare .comment{
  display: inline-block;
  position: absolute;
  /* top: 400rpx; */
  left: 430rpx;
}
.uShare .comment .commentPng{
  width: 30rpx;
  height: 30rpx;
}
.uShare .comment .commentText{
  font-size: 30rpx;
  vertical-align: 5rpx;
}
.like{
  display: inline-block;
  position:  absolute;
  left: 550rpx;
}
.like image{
  width: 30rpx;
  height: 30rpx;
  /* vertical-align: middle; */
}
.like .likeText{
  font-size: 30rpx;
  vertical-align: 5rpx;
}

.text-container{
  padding: 0 30rpx;
  font-size: 40rpx;
  font-weight: 400;
}

.img-container{
  position: relative;
  display: flex;
  float: warp;
  /* justify-content: space-between; */
  width: 700rpx;
  height: 200rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.img-container .image{
  width: 31%;
  height: 100%;
  margin-left: 20rpx;
}

.img-num{
  position: absolute;
  height: 30rpx;
  right: 80rpx;
  bottom: 80rpx;
  padding: 5rpx 10rpx;
  background-color: rgba(0,0,0,.7);
  color: #fff;
  font-size: 24rpx;
}